<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="600dp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@drawable/side"

        >

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginHorizontal="120dp"
            android:text="Categori"

            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sild2"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TypeButton1"

            android:padding="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="4dp"

            android:src="@drawable/excersize"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동"
            android:textSize="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_gravity="center"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sild2"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TypeButton2"
            android:padding="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/study"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공부"
            android:textSize="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sild2"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TypeButton3"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="1.5dp"
            android:padding="0dp"
            android:src="@drawable/travel"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행"
            android:textSize="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sild2"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TypeButton4"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="1.5dp"
            android:padding="0dp"
            android:src="@drawable/eat"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식단"
            android:textSize="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>
